<mvc:View
  height="100%"
  controllerName="netIOT.pnDevice.About.License.License"
  xmlns:core="sap.ui.core"
  xmlns:l="sap.ui.layout"
  xmlns:f="sap.ui.layout.form"
  xmlns:mvc="sap.ui.core.mvc"
  xmlns="sap.m">
  <Page
    title="{i18n>mitLicense}"
    class="sapUiContentPadding page customPageTitle"
    showNavButton="true"
    navButtonPress="onNavBack"
    navButtonTooltip="{i18n>goBack}">
    <headerContent>
      <Button icon="sap-icon://home" tooltip="{i18n>goHome}" press="goToHomePage"/>
    </headerContent>

    <content>
      <TextArea class="licenseText sapUiSmallMarginTop" enabled="false" value="{/licenseText}" ></TextArea>
    </content>
    <footer >
      <Toolbar class="footerToolbar">
        <ToolbarSpacer/>
        <Text text="{i18n>companyName}" />
        <ToolbarSpacer/>
      </Toolbar>
    </footer>

  </Page>
</mvc:View>
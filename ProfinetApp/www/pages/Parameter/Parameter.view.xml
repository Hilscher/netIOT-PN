<mvc:View
  height="100%"
  controllerName="netIOT.pnDevice.Parameter.Parameter"
  xmlns:l="sap.ui.layout"
  xmlns:mvc="sap.ui.core.mvc"
  xmlns="sap.m">
  <Page
    title="{i18n>parameter}"
    class="sapUiContentPadding page customPageTitle"
    showNavButton="true" 
    navButtonPress="onNavBack"
    navButtonTooltip="{i18n>goBack}">
    <headerContent>
      <Button icon="sap-icon://home" tooltip="{i18n>goHome}" press="goToHomePage"/>
    </headerContent>    
    <content>
      <Toolbar  class="sapUiResponsiveMargin noBorderBottom">
        <ToolbarSpacer/>
        <Title text="{/parameterShortName}" class="titleText"/>
        <ToolbarSpacer/>
      </Toolbar>
      
      <!--
      <l:VerticalLayout
           class="sapUiContentPadding sapUiNoMarginTop"
           width="100%">

        <List items="{path: '/basicInfos'}">
          <DisplayListItem
              press="goToDetails"
              label="{name}"
              value="{value}"
              type="Navigation"/>
        </List>     
      </l:VerticalLayout>
      -->
       
      <Panel expandable="true" 
             expanded="true"
             width="auto"            
             class="sapUiResponsiveMargin sapUiNoMarginTop">
        <headerToolbar>
          <Toolbar>
            <Title text="General" />           
          </Toolbar>
        </headerToolbar>
        <content>
          <List items="{path: '/basicInfos'}" >
            <DisplayListItem
              press="goToDetails"
              label="{name}"
              value="{value}"
              type="{listType}" />
          </List>
        </content>
      </Panel>
      
      <!--  visible="{/showSubParameterList}"  -->
      
      <Panel id="subParameterListPanel"
             expandable="true" 
             expanded="true"
             width="auto"
             class="sapUiResponsiveMargin sapUiNoMarginTop">
        <headerToolbar>
          <Toolbar>
            <Title text="Sub-Parameters" />  
            <Title text="{/subParameterCount}" />
          </Toolbar>
        </headerToolbar>
        <content>
        <Table
          growing="true"
          growingScrollToLoad="true"
          noDataText="{i18n>noData}"
          width="auto"
          items="{
            path: '/subParameterList'
          }">
          <columns>
            <Column hAlign="Left">
              <Text text="Name"/>
            </Column>
          
            <Column hAlign="Right">
              <Text text="Value"/>
            </Column>

          </columns>
          <items>
            <ColumnListItem
              press="goToSubParameter"
              type="Navigation">
              <cells>                
                <ObjectIdentifier
                  title="{name}"/>
                <Text text = "{value} {unit}"/>
              </cells>
            </ColumnListItem>
          </items>
        </Table>
        </content>
      </Panel> 
      
    </content>
    <footer >
      <Toolbar class="footerToolbar">
        <ToolbarSpacer/>
        <Text text="{i18n>companyName}" />
        <ToolbarSpacer/>
      </Toolbar>
    </footer>   
    
  </Page>
</mvc:View>